{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Command Center: Install",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": []
    },
    {
      "label": "Command Center: Compile",
      "type": "shell",
      "command": "npm run compile",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Command Center: Watch",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Command Center: Lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Command Center: Test",
      "type": "shell",
      "command": "npm run test",
      "problemMatcher": []
    },
    {
      "label": "Command Center: Verify",
      "type": "shell",
      "command": "npm run verify",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Command Center: GitHub OAuth Sign-In",
      "type": "shell",
      "command": "gh auth login --hostname github.com --web --git-protocol https --scopes \"repo,project,workflow,admin:repo_hook\"",
      "problemMatcher": []
    },
    {
      "label": "Command Center: GitHub Auth Status",
      "type": "shell",
      "command": "gh auth status",
      "problemMatcher": []
    },
    {
      "label": "Command Center: Codex CLI Sign-In",
      "type": "shell",
      "command": "${input:codexAuthCommand}",
      "problemMatcher": []
    },
    {
      "label": "Command Center: Copilot CLI Sign-In",
      "type": "shell",
      "command": "${input:copilotAuthCommand}",
      "problemMatcher": []
    },
    {
      "label": "Command Center: Package VSIX",
      "type": "shell",
      "command": "npm run package:vsix",
      "dependsOn": [
        "Command Center: Compile"
      ],
      "problemMatcher": []
    },
    {
      "label": "Command Center: Install VSIX",
      "type": "shell",
      "command": "code --install-extension .\\phoenix-vscode-command-center-0.1.0.vsix --force",
      "dependsOn": [
        "Command Center: Package VSIX"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "codexAuthCommand",
      "type": "promptString",
      "description": "Command to sign in to Codex CLI",
      "default": "codex login"
    },
    {
      "id": "copilotAuthCommand",
      "type": "promptString",
      "description": "Command to sign in to Copilot CLI",
      "default": "copilot login"
    }
  ]
}
